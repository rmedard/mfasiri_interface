<div>
    <ul class="nav nav-pills nav-justified">
        {% for link in links %}
            {% if link.url.routename == 'entity.node.canonical' %}
                <li>
                    <a href="{{ path('entity.node.canonical', {'node':link.url.routeparameters.node}, {'language': link.language}) }}">
                        <img src="/{{ directory }}/images/flags/{{ link.language.id }}.svg" alt="{{ link.language.label }}">
                        {{ link.language.label }}
                    </a>
                </li>
            {% endif %}
        {% endfor %}
    </ul>
</div>